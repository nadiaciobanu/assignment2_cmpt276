        <td><%= @tokimon.fight %></td>
        <td><%= @tokimon.fire %></td>
        <td><%= @tokimon.water %></td>
        <td><%= @tokimon.electric %></td>
        <td><%= @tokimon.ice %></td>
        <td><%= @tokimon.psychic %></td>
        <td><%= @tokimon.total %></td>
        <td><%= link_to (Trainer.find(@tokimon.trainer_id)).pname, Trainer.find(@tokimon.trainer_id) %></td>
      </tr>
  </tbody>
</table>

