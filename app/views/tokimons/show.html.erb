  <thead>
    <tr>
      <th>Tokimon Name</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Colour</th>
      <th>Flying Ability</th>
      <th>Fighting Ability</th>
      <th>Fire Ability</th>
      <th>Water Ability</th>
      <th>Electric Ability</th>
      <th>Ice Ability</th>
      <th>Psychic Ability</th>
      <th>Total Ability</th>
      <th>Trainer Name</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @tokimon.tname %></td>
        <td><%= @tokimon.weight %></td>
        <td><%= @tokimon.height %></td>
        <td style="background-color:<%= @tokimon.colour %>"><%= @tokimon.colour %></td>
