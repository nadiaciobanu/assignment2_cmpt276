<p id="notice"><%= notice %></p>

<h1>Registered Trainers</h1>

<table>
  <thead>
    <tr>
      <th>Trainer Name</th>
      <th>Level</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.pname %></td>
        <td><%= trainer.level %></td>
        <td><%= link_to 'Show', trainer %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
        <td><%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="aLink"><%= link_to 'New Trainer', new_trainer_path %></div>
